<Window x:Class="SETKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KeyButton"
        Title="SET Keyboard" Width="1030" Height="600">
    
    <DockPanel>
        <RichTextBox x:Name="SETConsole" FontSize="24" FontFamily="Segoe UI Light" 
                     DockPanel.Dock="Top" Height="Auto"
                     BorderThickness="5" Background="#FFD8F9E9" Cursor="No" Block.LineHeight="6" />

        <TabControl x:Name="bPanel" DockPanel.Dock="Bottom" SizeChanged="sizeChanged">
            <TabItem Header="QWERTY" Width="120" Height="50">
                <Grid x:Name="QWERTYGrid">
                </Grid>
            </TabItem>
            <TabItem Header="T9" Width="120" Height="50">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        
    </DockPanel>
    
</Window>
